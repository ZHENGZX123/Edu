<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/newjthz_wd">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout1"
        android:layout_alignLeft="@+id/layout1"
        android:layout_alignStart="@+id/layout1"
        android:drawableLeft="@drawable/ic_luaner"
        android:gravity="center"
        android:text="开维宝宝"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="50dp"
        android:textColor="@color/_ffffff"
        android:textSize="16sp"/>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/all_session"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:padding="5dp"
                android:background="@drawable/selector_gridview_item"
                android:checked="true"
                android:textColor="@color/main_button_selector"
                android:drawableBottom="@drawable/menu_selecter"
                android:gravity="center"
                android:text="全部课程"/>
            <RadioButton
                android:id="@+id/kinect_session"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_gridview_item"
                android:padding="5dp"
                android:textColor="@color/main_button_selector"
                android:drawableBottom="@drawable/menu_selecter"
                android:gravity="center"
                android:text="体感课程"/>
            <RadioButton
                android:id="@+id/music"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/main_button_selector"
                android:button="@null"
                android:drawableBottom="@drawable/menu_selecter"
                android:padding="5dp"
                android:visibility="gone"
                android:gravity="center"
                android:text="体感课程"/>
        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/white_grayline_val"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/_ffffff"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/app_name"/>
                    <TextView
                        android:id="@+id/user"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="个人信息"
                        android:textColor="@color/_ffffff"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                    <ImageView
                        android:id="@+id/userpic"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:visibility="gone"
                        android:src="@drawable/boy1"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="7dp"
                        android:text="郑老师"
                        android:textColor="@color/_ffffff"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/user_ok"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="扫描成功请在手机端确认登录"
                        android:textColor="@color/_ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/Recently"
                    android:layout_width="240dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_gridview_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:onClick="RecentlySession"
                    android:scaleType="centerInside"
                    android:src="@drawable/pic_zjbf"/>

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_gridview_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:onClick="MySession"
                    android:scaleType="centerInside"
                    android:src="@drawable/pic_wdkc2"/>

                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="80dp"
                    android:scaleType="centerInside"
                    android:background="@drawable/selector_gridview_item"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:onClick="MyCollect"
                    android:src="@drawable/pic_wdsc3"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <cn.kiway.yjhz.utils.views.viewPager.OverViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <LinearLayout
                    android:id="@+id/points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:orientation="horizontal"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/titld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#70000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">



        <TextView
            android:id="@+id/wifi_name_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_device_signal_wifi_white"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/sd_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_hardware_sim_card_has"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/hezi_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_hardware_desktop_mac"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/xignq_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_weight="1"
            android:gravity="center|right"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>
    <WebView
        android:id="@+id/webview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"></WebView>
</RelativeLayout>
