<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7"
    android:minWidth="240dp"
    android:orientation="vertical"
    android:padding="7dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="7dp"
        android:text="加入已有网络"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="wifi名字"
        android:textColor="#333333"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/wifi_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/fillet_grayline_whitebg"
        android:gravity="left|center_vertical"
        android:inputType="text"
        android:padding="5dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="wifi密码"
        android:textColor="#333333"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/wifi_ps"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/fillet_grayline_whitebg"
        android:gravity="left|center_vertical"
        android:inputType="text"
        android:padding="5dp"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:text="加密方式"
        android:textColor="#333333"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_val"
        android:dropDownVerticalOffset="1dp"
        android:popupBackground="@drawable/white_val"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/joins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/join_wifi_val"
        android:padding="10dp"
        android:text="加入"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/create_hot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:padding="7dp"
        android:text="无wifi网络，自建热点?"
        android:textColor="#333333"
        android:textSize="10sp" />

</LinearLayout>