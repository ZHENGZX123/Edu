<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" >

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <uk.co.senab.photoview.widget.FilterImageView
            android:id="@+id/previos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
             android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_20dp"
            android:src="@drawable/previous" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/_e5e5e5" />

    <LinearLayout
        android:id="@+id/wdqmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_10dp"
            android:text="@string/wdqmb"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/qmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_go"
            android:padding="@dimen/_10dp"
            android:drawablePadding="@dimen/_7dp"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <LinearLayout
        android:id="@+id/qcy_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_10dp"
            android:text="@string/qcy"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/qcy_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/icon_go"
            android:padding="@dimen/_10dp"
            android:drawablePadding="@dimen/_7dp"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_7dp"
            android:text="@string/xxmdr"
            android:layout_gravity="center_vertical"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />

        <kankan.wheel.widget.SwitchButton
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mTogBtn"
            style="@style/SwitchButtonStyle"
            android:layout_gravity="center_vertical"
            app:animationVelocity="8"
            app:offDrawable="@drawable/img_back_off"
            app:onColor="#43d95d"
            app:thumbDrawable="@drawable/selector_thumb"
            app:thumb_marginBottom="2dp"
            app:thumb_marginLeft="3dp"
            app:thumb_marginRight="3dp"
            app:thumb_marginTop="3dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/_e5e5e5" />

    <TextView
        android:id="@+id/qkjlu_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:drawableRight="@drawable/icon_go"
        android:padding="@dimen/_10dp"
        android:text="@string/qkltjl"
        android:textColor="@color/_333333"
        android:textSize="@dimen/_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

</LinearLayout>