<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" >

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/inschool_alter" />

        <uk.co.senab.photoview.widget.FilterImageView
            android:id="@+id/previos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_20dp"
            android:src="@drawable/previous" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/_ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_7dp" >

        <ImageView
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5dp"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_hardware_keyboard_arrow_left" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_16sp" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/_5dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_hardware_keyboard_arrow_right" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@color/_ffffff"
        android:checkedButton="@+id/rb1"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_1dp" >

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttun_green_seletor"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="@string/weisheng"
            android:textColor="@color/main_menu_button_selector"
            android:textSize="@dimen/_14sp" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_1dp"
            android:layout_weight="1"
            android:background="@drawable/buttun_green_seletor"
            android:button="@null"
            android:gravity="center"
            android:text="@string/liyi"
            android:textColor="@color/main_menu_button_selector"
            android:textSize="@dimen/_14sp" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_1dp"
            android:layout_weight="1"
            android:background="@drawable/buttun_green_seletor"
            android:button="@null"
            android:gravity="center"
            android:text="@string/yongcan"
            android:textColor="@color/main_menu_button_selector"
            android:textSize="@dimen/_14sp" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_1dp"
            android:layout_weight="1"
            android:background="@drawable/buttun_green_seletor"
            android:button="@null"
            android:gravity="center"
            android:text="@string/jilv"
            android:textColor="@color/main_menu_button_selector"
            android:textSize="@dimen/_14sp" />

        <RadioButton
            android:id="@+id/rb5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_1dp"
            android:layout_weight="1"
            android:background="@drawable/buttun_green_seletor"
            android:button="@null"
            android:gravity="center"
            android:text="@string/fayan"
            android:textColor="@color/main_menu_button_selector"
            android:textSize="@dimen/_14sp" />

        <RadioButton
            android:id="@+id/rb6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_1dp"
            android:layout_weight="1"
            android:background="@drawable/buttun_green_seletor"
            android:button="@null"
            android:gravity="center"
            android:text="@string/kaoqing"
            android:textColor="@color/main_menu_button_selector"
            android:textSize="@dimen/_14sp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_00cc99" />

    <android.support.v4.view.ViewPager
        android:id="@+id/gift_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </android.support.v4.view.ViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <LinearLayout
        android:id="@+id/actlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/actsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/add"
            android:drawablePadding="@dimen/_5dp"
            android:padding="@dimen/_10dp"
            android:text="@string/send"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

</LinearLayout>