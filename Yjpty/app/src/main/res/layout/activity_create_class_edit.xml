<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" >

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/jions_class" />

        <uk.co.senab.photoview.widget.FilterImageView
            android:id="@+id/previos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_20dp"
            android:src="@drawable/previous" />

        <TextView
            android:id="@+id/join"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/_20dp"
            android:paddingRight="@dimen/_10dp"
            android:text="@string/sure"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/_e5e5e5" />

    <LinearLayout
        android:id="@+id/area_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            android:text="@string/qxxzdq"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/area_val"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/_10dp"
            android:drawableRight="@drawable/icon_go"
            android:gravity="right"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/_e5e5e5" />

    <LinearLayout
        android:id="@+id/yey_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10dp"
            android:text="@string/kindergarten"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_16sp" />

        <TextView
            android:id="@+id/yey_val"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/_10dp"
            android:drawableRight="@drawable/icon_go"
            android:gravity="right"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/_e5e5e5" />

    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@color/_f7f7f7"
        android:hint="@string/class_code"
        android:inputType="text"
        android:padding="@dimen/_10dp"
        android:singleLine="true"
        android:textSize="@dimen/_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:background="@color/_e5e5e5" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1px"
        android:layout_marginTop="@dimen/_10dp"
        android:background="@color/_e5e5e5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10dp"
        android:text="@string/class_name"
        android:textColor="@color/_333333"
        android:textSize="@dimen/_16sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/edit_c"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:layout_marginLeft="@dimen/_10dp"
        android:layout_marginRight="@dimen/_10dp"
        android:background="@drawable/fillet_grayline_whitebg"
        android:gravity="left|center_vertical"
        android:hint="@string/class_name_edit"
        android:inputType="text"
        android:maxLength="20"
        android:padding="@dimen/_5dp"
        android:textSize="@dimen/_14sp"
        android:visibility="gone" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:scrollbars="@null" >
    </ListView>

    <Button
        android:id="@+id/create_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/chengsebutton_selector_bg"
        android:padding="@dimen/_10dp"
        android:text="@string/next"
        android:textColor="@color/_ffffff"
        android:visibility="gone" />

</LinearLayout>