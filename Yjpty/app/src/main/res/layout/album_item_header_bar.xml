<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header_bar_photo_browse"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@color/viewfinder_mask" >

        <uk.co.senab.photoview.widget.FilterImageView
            android:id="@+id/header_bar_photo_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="5.0dip"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back2" />

        <TextView
            android:id="@+id/header_bar_photo_count"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="20dip"
            android:paddingRight="@dimen/_10dp"
            android:layout_toRightOf="@id/header_bar_photo_back"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/_666666"
            android:textSize="22.0sp" />

        <ImageView
            android:id="@+id/header_bar_photo_delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="@dimen/_20dp"
            android:paddingLeft="5.0dip"
            android:scaleType="fitCenter"
            android:contentDescription="@string/app_name"
            android:src="@drawable/post_pager_delete"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_save"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:minWidth="50dip"
            android:gravity="center"
            android:background="@drawable/green_val"
            android:textColor="#ffffff"
            android:padding="@dimen/_5dp"
            android:layout_marginRight="@dimen/_10dp"
            android:text="@string/saving_image"
            android:visibility="gone"
            android:layout_height="30dip" />
    </RelativeLayout>

</LinearLayout>