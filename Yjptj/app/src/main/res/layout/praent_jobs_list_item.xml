<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f7f7f7"
    android:orientation="vertical"
    android:paddingLeft="@dimen/_5dp"
    android:paddingRight="@dimen/_5dp"
    android:paddingTop="@dimen/_7dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_val"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_3dp"
        android:paddingLeft="@dimen/_5dp"
        android:paddingRight="@dimen/_5dp"
        android:paddingTop="@dimen/_7dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="木子"
                android:textColor="@color/_333333"
                android:textSize="@dimen/_14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2月21日"
                android:textColor="@color/_666666"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_marginTop="@dimen/_2dp"
            android:background="@color/_e5e5e5" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="抄作业多少次"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_14sp" />

        <TextView
            android:id="@+id/for_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2dp"
            android:gravity="center_vertical"
            android:text="来自张老师"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_12sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240dp"
            android:layout_marginTop="@dimen/_7dp"
            android:background="@color/_4ca2bb" >

            <uk.co.senab.photoview.widget.FilterImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/hugh" />

            <TextView
                android:id="@+id/take_photos_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableTop="@drawable/ic_take_photos"
                android:text="@string/take_photos_to_homework"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_14sp" />

            <uk.co.senab.photoview.widget.FilterImageView
                android:id="@+id/take_photos"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/_10dp"
                android:layout_marginRight="@dimen/_10dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/take_photo_btn" />
        </RelativeLayout>

        <TextView
            android:id="@+id/jiao_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"
            android:gravity="center_vertical"
            android:text="21:30"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"
            android:gravity="center_vertical"
            android:text="做作业，得红花"
            android:drawableLeft="@drawable/flower"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1px"
            android:layout_marginBottom="@dimen/_2dp"
            android:layout_marginTop="@dimen/_2dp"
            android:background="@color/_e5e5e5" />

        <TextView
            android:id="@+id/noboby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3dp"
            android:gravity="center"
            android:paddingBottom="@dimen/_3dp"
            android:paddingTop="@dimen/_3dp"
            android:text="还没有人交作业呢"
            android:textColor="@color/_666666"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

</LinearLayout>