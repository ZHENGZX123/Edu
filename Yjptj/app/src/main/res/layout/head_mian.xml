<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/_f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160dp"
        android:background="@drawable/ont"
        android:orientation="vertical" >

        <uk.co.senab.photoview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile"
            android:layout_width="@dimen/_70dp"
            android:layout_height="@dimen/_70dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30dp"
            android:src="@drawable/hugh"
            app:civ_border_color="@color/_e5e5e5"
            app:civ_border_width="3dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_10dp"
            android:text="母子 （3岁19天） "
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/seesion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/growth_data"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_12sp" />

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@color/_ffffff" />

            <TextView
                android:id="@+id/homework"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/praent_jobs"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_12sp" />

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@color/_ffffff" />

            <TextView
                android:id="@+id/comeob_baby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_12sp" />

            <View
                android:layout_width="@dimen/_1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginTop="@dimen/_5dp"
                android:background="@color/_ffffff" />

            <TextView
                android:id="@+id/call_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/_ffffff"
                android:textSize="@dimen/_12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>