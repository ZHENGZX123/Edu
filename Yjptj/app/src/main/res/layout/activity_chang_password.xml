<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_f7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp" >

        <TextView
            android:id="@+id/title"
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="@string/change_password" />

        <uk.co.senab.photoview.widget.FilterImageView
            android:id="@+id/previos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:paddingLeft="@dimen/_10dp"
            android:paddingRight="@dimen/_20dp"
            android:src="@drawable/previous" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/green_line_val"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="match_parent"
            android:background="@color/_2000cc99"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_lock" />

        <View
            android:layout_width="@dimen/_1px"
            android:layout_height="match_parent"
            android:background="@color/_00cc99" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:background="@null"
            android:hint="@string/oldpassword"
            android:inputType="textPassword"
            android:maxLength="11"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/green_line_val"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="match_parent"
            android:background="@color/_2000cc99"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_lock" />

        <View
            android:layout_width="@dimen/_1px"
            android:layout_height="match_parent"
            android:background="@color/_00cc99" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:background="@null"
            android:hint="@string/newpassword"
            android:inputType="textPassword"
            android:maxLength="11"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/green_line_val"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/_30dp"
            android:layout_height="match_parent"
            android:background="@color/_2000cc99"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_lock" />

        <View
            android:layout_width="@dimen/_1px"
            android:layout_height="match_parent"
            android:background="@color/_00cc99" />

        <EditText
            android:id="@+id/new_password_again"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"
            android:background="@null"
            android:hint="@string/new2password"
            android:inputType="textPassword"
            android:maxLength="11"
            android:padding="@dimen/_10dp"
            android:singleLine="true"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10dp"
        android:padding="@dimen/_3dp"
        android:textColor="@color/_00cc99"
        android:textSize="@dimen/_12sp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:layout_marginRight="@dimen/_20dp"
        android:layout_marginTop="@dimen/_20dp"
        android:background="@drawable/load_button_selector_bg"
        android:padding="@dimen/_10dp"
        android:text="@string/sure"
        android:textColor="@color/_ffffff" />

</LinearLayout>