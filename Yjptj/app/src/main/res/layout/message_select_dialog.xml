<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/_3dp"
    android:paddingTop="@dimen/_3dp" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_weight="1"
        android:background="@drawable/button_selector_bg"
        android:padding="@dimen/_7dp" >

        <TextView
            android:id="@+id/homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_7dp"
            android:drawableTop="@drawable/homework_se"
            android:gravity="center"
            android:text="@string/homework"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/homework_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/homework"
            android:background="@drawable/red_ring_bg"
            android:drawablePadding="@dimen/_7dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_10sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40dp"
        android:layout_weight="1"
        android:background="@drawable/button_selector_bg"
        android:padding="@dimen/_7dp" >

        <TextView
            android:id="@+id/notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/_7dp"
            android:drawableTop="@drawable/notiy_se"
            android:gravity="center"
            android:text="@string/notify"
            android:textColor="@color/_333333"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/notify_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/notify"
            android:background="@drawable/red_ring_bg"
            android:drawablePadding="@dimen/_7dp"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/_ffffff"
            android:textSize="@dimen/_10sp" />
    </RelativeLayout>

</LinearLayout>